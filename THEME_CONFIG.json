{
  "theme": {
    "name": "IDE Dark - Extend IT",
    "description": "Terminal and code editor inspired dark theme with electric blue and neon green accents",
    "version": "1.0.0",
    
    "fonts": {
      "primary": "JetBrains Mono",
      "fallback": "monospace",
      "googleFontsUrl": "https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;600;700&display=swap",
      "alternativeOptions": [
        "Source Code Pro",
        "Fira Code",
        "IBM Plex Mono",
        "Roboto Mono"
      ]
    },

    "colors": {
      "palette": {
        "background": {
          "primary": "hsl(240, 10%, 4%)",
          "secondary": "hsl(240, 8%, 8%)",
          "terminal": "hsl(240, 10%, 3%)",
          "description": "Deep blacks for IDE-like appearance"
        },
        "foreground": {
          "primary": "hsl(180, 100%, 90%)",
          "muted": "hsl(180, 20%, 60%)",
          "description": "Light cyan for readability"
        },
        "accent": {
          "primary": "hsl(187, 100%, 50%)",
          "primaryName": "Electric Blue",
          "primaryUse": "Main brand color, CTAs, primary actions, glow effects",
          "secondary": "hsl(142, 100%, 50%)",
          "secondaryName": "Neon Green",
          "secondaryUse": "Success states, terminal text, live indicators",
          "tertiary": "hsl(28, 100%, 70%)",
          "tertiaryName": "Terminal Amber",
          "tertiaryUse": "Warnings, highlights, status badges"
        },
        "status": {
          "success": "hsl(142, 100%, 50%)",
          "warning": "hsl(28, 100%, 70%)",
          "error": "hsl(0, 84%, 60%)",
          "live": "hsl(142, 100%, 50%)"
        },
        "ui": {
          "border": "hsl(240, 6%, 15%)",
          "input": "hsl(240, 6%, 12%)",
          "muted": "hsl(240, 6%, 12%)",
          "card": "hsl(240, 8%, 8%)"
        }
      },

      "gradients": {
        "holographic": "linear-gradient(90deg, hsl(187, 100%, 50%) 0%, hsl(142, 100%, 50%) 50%, hsl(187, 100%, 50%) 100%)",
        "background": "linear-gradient(to bottom, transparent, rgba(10, 10, 15, 0.5), rgba(10, 10, 15, 1))",
        "muted": "linear-gradient(to bottom, transparent, hsl(240, 6%, 12%, 0.2))"
      },

      "shadows": {
        "glowPrimary": "0 0 20px hsl(187, 100%, 50%, 0.3), 0 0 40px hsl(187, 100%, 50%, 0.1)",
        "glowSecondary": "0 0 20px hsl(142, 100%, 50%, 0.3), 0 0 40px hsl(142, 100%, 50%, 0.1)",
        "card": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)"
      },

      "tailwindConfig": {
        "extend": {
          "colors": {
            "primary": "hsl(var(--primary))",
            "secondary": "hsl(var(--secondary))",
            "accent": "hsl(var(--accent))",
            "terminal": {
              "bg": "hsl(var(--terminal-bg))",
              "text": "hsl(var(--terminal-text))"
            },
            "glow": {
              "primary": "hsl(var(--glow-primary))",
              "secondary": "hsl(var(--glow-secondary))"
            }
          }
        }
      }
    },

    "animations": {
      "easings": {
        "smooth": "cubic-bezier(0.4, 0, 0.2, 1)",
        "snappy": "cubic-bezier(0.4, 0, 0.6, 1)",
        "elastic": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
      },
      
      "durations": {
        "fast": "0.15s",
        "normal": "0.3s",
        "slow": "0.6s"
      },

      "keyframes": {
        "blink": {
          "description": "Terminal cursor blinking",
          "keyframes": "0%, 50% { opacity: 1; } 51%, 100% { opacity: 0; }"
        },
        "glitch": {
          "description": "Text glitch effect on hover",
          "keyframes": "0%, 100% { transform: translate(0); } 20% { transform: translate(-2px, 2px); } 40% { transform: translate(-2px, -2px); } 60% { transform: translate(2px, 2px); } 80% { transform: translate(2px, -2px); }"
        },
        "matrixFall": {
          "description": "Code rain background effect",
          "keyframes": "0% { transform: translateY(-100%); opacity: 1; } 100% { transform: translateY(100vh); opacity: 0; }"
        },
        "scan": {
          "description": "CRT scan line effect",
          "keyframes": "0% { transform: translateY(-100%); } 100% { transform: translateY(100%); }"
        },
        "holoShimmer": {
          "description": "Holographic border shimmer",
          "keyframes": "0% { background-position: -100% 0; } 100% { background-position: 200% 0; }"
        }
      },

      "framerMotion": {
        "fadeInUp": {
          "initial": { "opacity": 0, "y": 20 },
          "animate": { "opacity": 1, "y": 0 },
          "transition": { "duration": 0.6 }
        },
        "scaleIn": {
          "initial": { "opacity": 0, "scale": 0.8 },
          "animate": { "opacity": 1, "scale": 1 },
          "transition": { "duration": 0.4 }
        },
        "slideInRight": {
          "initial": { "opacity": 0, "x": 50 },
          "animate": { "opacity": 1, "x": 0 },
          "transition": { "duration": 0.8 }
        }
      }
    },

    "spacing": {
      "section": "5rem",
      "component": "2rem",
      "element": "1rem"
    },

    "borderRadius": {
      "sm": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem"
    },

    "breakpoints": {
      "mobile": "640px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1280px"
    },

    "effects": {
      "textGlow": {
        "class": "glow-primary",
        "css": "text-shadow: 0 0 10px hsl(var(--glow-primary) / 0.5), 0 0 20px hsl(var(--glow-primary) / 0.3), 0 0 30px hsl(var(--glow-primary) / 0.2);"
      },
      "boxGlow": {
        "class": "box-glow-primary",
        "css": "box-shadow: 0 0 20px hsl(var(--glow-primary) / 0.3), 0 0 40px hsl(var(--glow-primary) / 0.1);"
      },
      "backdropBlur": {
        "light": "backdrop-blur-sm",
        "medium": "backdrop-blur-md",
        "heavy": "backdrop-blur-lg"
      }
    },

    "typography": {
      "scale": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem",
        "6xl": "3.75rem",
        "7xl": "4.5rem"
      },
      "weights": {
        "light": 300,
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeight": {
        "tight": "1.25",
        "normal": "1.5",
        "relaxed": "1.75"
      }
    },

    "componentVariants": {
      "button": {
        "default": "Primary action button with electric blue background and glow",
        "outline": "Secondary action with border and hover states",
        "ghost": "Minimal button for tertiary actions",
        "destructive": "Error/delete actions in red"
      },
      "card": {
        "default": "Standard card with dark background and subtle border",
        "elevated": "Card with glow effect and backdrop blur",
        "glass": "Glassmorphism effect with transparency"
      }
    },

    "designTokens": {
      "cssVariables": {
        "--background": "240 10% 4%",
        "--foreground": "180 100% 90%",
        "--primary": "187 100% 50%",
        "--secondary": "142 100% 50%",
        "--accent": "28 100% 70%",
        "--muted": "240 6% 12%",
        "--border": "240 6% 15%",
        "--terminal-bg": "240 10% 3%",
        "--terminal-text": "142 100% 70%",
        "--glow-primary": "187 100% 50%",
        "--glow-secondary": "142 100% 50%",
        "--radius": "0.25rem"
      }
    },

    "accessibility": {
      "contrastRatios": {
        "primary-on-background": "14.5:1 (AAA)",
        "secondary-on-background": "16.2:1 (AAA)",
        "foreground-on-background": "18.1:1 (AAA)"
      },
      "focusIndicators": {
        "color": "hsl(var(--primary))",
        "width": "2px",
        "offset": "2px"
      }
    },

    "usage": {
      "hero": "Full-screen section with 3D canvas, large heading with primary color accent, CTA buttons",
      "services": "Grid of cards with icons, hover effects with glow",
      "estimator": "Interactive form with animated results card",
      "contact": "Form with terminal-style inputs and primary CTA",
      "footer": "Minimal with monospace typography and muted colors"
    },

    "notes": [
      "All colors use HSL format for easy manipulation",
      "Monospace font used throughout for code/terminal aesthetic",
      "Glow effects are performance-friendly using CSS text-shadow/box-shadow",
      "Three.js scene colors match the primary/secondary palette",
      "Framer Motion used for smooth page transitions",
      "Design system is fully customizable via CSS variables",
      "Mobile-first responsive approach",
      "Dark theme only - no light mode toggle needed"
    ]
  }
}
